{
  "name": "kira-payment-link-api",
  "version": "1.0.0",
  "description": "Kira Payment Link API",
  "author": "Jeison Aparicio jeisonca96@hotmail.com",
  "private": false,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build && npm run copy-templates",
    "copy-templates": "copyfiles -u 1 src/**/*.hbs dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "npm run copy-templates && nest start --watch",
    "start:debug": "npm run copy-templates && nest start --debug --watch",
    "start:prod": "node dist/main",
    "dev": "npm run start:dev",
    "debug": "npm run start:debug",
    "prod": "npm run start:prod",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:security": "./scripts/test-security.sh",
    "security:audit": "npm audit",
    "security:check": "npm run security:audit && npm run test:security",
    "lambda:offline": "serverless offline",
    "lambda:deploy": "serverless deploy",
    "lambda:remove": "serverless remove",
    "lambda:logs": "serverless logs -f main -t",
    "lambda:invoke": "serverless invoke -f main"
  },
  "dependencies": {
    "@codegenie/serverless-express": "^4.15.0",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.7",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.7",
    "@nestjs/mongoose": "^11.0.1",
    "@nestjs/platform-express": "^11.1.2",
    "@nestjs/swagger": "^11.0.3",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "aws-lambda": "^1.0.7",
    "axios": "^1.9.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "moment": "^2.30.1",
    "mongoose": "^8.9.6",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.7",
    "@types/aws-lambda": "^8.10.145",
    "@types/express": "^5.0.0",
    "@types/handlebars": "^4.1.0",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "29.5.14",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.1",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.15.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.23.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "serverless": "^4.7.0",
    "serverless-offline": "^14.3.3",
    "serverless-plugin-optimize": "^4.2.1-rc.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
